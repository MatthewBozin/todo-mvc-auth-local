                <%}%>

                    <h2 class="center outline">
                        <%= user.userName %> has <%= left %> order<% if (left> 1 || left === 0) {%>s<%} %>%>.
                    </h2>
    </section>
    <% if (user.chef !=='on' ) { %>
        <form class="menu center" action="/todos/createTodo" method='POST'>
            <% foodList.forEach( el=> { %>
                <div class="item">
                    <input class="<%=el.class %>" type="submit" name="todoItem" value="<%=el.name %>"
                        placeholder="<%=el.name %>">
                    <span>
                        $<%=el.price %>
                    </span>
                </div>
                <% }) %>
        </form>
        <%}%>

            <div class="center log outline">
                <a href="/logout">Logout</a>
