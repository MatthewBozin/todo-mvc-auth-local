<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <h1>Orders</h1>
    <ul>
        <% todos.forEach( el=> { %>
            <li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? ' completed' : 'not' %>'><%= el.todo %></span>
                <% if (user.chef !=='on' ) { %>
                    <span class='del'> Delete </span>
                    <%}%>
            </li>
            <% }) %>
    </ul>

    <h2>
        <%= user.userName %> has <%= left %> order<% if (left> 1 || left === 0) {%>s<%} %>%>.
    </h2>

    <% if (user.chef !=='on' ) { %>
        <form action="/todos/createTodo" method='POST'>
            <input type="submit" name="todoItem" value="cheeseburger" placeholder="Cheeseburger">
            <input type="submit" name="todoItem" value="hamburger" placeholder="Hamburger">
            <input type="submit" name="todoItem" value="waffleburger" placeholder="Waffleburger">
        </form>
        <%}%>

            <a href="/logout">Logout</a>

            <script src="js/main.js"></script>
</body>

</html>